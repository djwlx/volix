{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "dist",
    "noEmit": false,
    "noImplicitAny": false
  },
  "include": ["app.ts", "src/**/*", "scripts/*", "config/*"]
}
